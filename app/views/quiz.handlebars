<div>
  <div
    class="relative bg-gray-50 inline-block p-2 rounded-sm shadow-sm">
    <div class="
            hidden
            absolute
            z-10
            inset-0
            overflow-y-auto
            flex
            justify-center
            items-center
            px-5
          " aria-labelledby="modal-title" role="dialog"
      aria-modal="true" id="dialog">
      <div class="
              flex
              items-end
              justify-center
              pt-4
              px-4
              pb-20
              text-center
              sm:block sm:p-0
            ">
        <div class="
                absolute
                inset-0
                bg-gray-500 bg-opacity-75
                transition-opacity
              " aria-hidden="true"></div>

        <div class="
                inline-block
                align-bottom
                bg-white
                rounded-lg
                text-left
                overflow-hidden
                shadow-xl
                transform
                transition-all
                sm:my-8 sm:align-middle sm:max-w-lg sm:w-full
              ">
          <div class="bg-white px-3 pt-2 pb-2 sm:p-3 sm:pb-1">
            <div class="sm:flex sm:items-start">
              <div
                class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                <h3 class="text-lg leading-6 font-medium text-gray-900"
                  id="modal-title"></h3>
                <div class="mt-2">
                  <p class="text-sm text-gray-500" id="prediction"></p>
                  <p class="text-sm text-gray-500" id="taskchar"></p>
                </div>
              </div>
            </div>
          </div>
          <div
            class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex">
            <button type="button" id="modalSecondaryButton" class="
                    mt-3
                    w-full
                    inline-flex
                    justify-center
                    rounded-sm
                    border border-gray-300
                    shadow-sm
                    px-4
                    py-2
                    bg-white
                    text-base
                    font-medium
                    text-gray-700
                    hover:bg-gray-50
                    focus:outline-none
                    focus:ring-2
                    focus:ring-offset-2
                    focus:ring-gray-500
                    sm:mt-0 sm:w-auto mb-3 sm:mb-0 sm:mr-3 sm:text-sm
                  ">
              Herunterladen
            </button>
            <button type="button" id="modalPrimaryButton" class="
                    w-full
                    inline-flex
                    justify-center
                    rounded-sm
                    border border-transparent
                    shadow-sm
                    px-3
                    py-2
                    text-base
                    font-medium
                    text-white
                    focus:ring-gray-500
                    focus:outline-none
                    focus:ring-2
                    focus:ring-offset-2
                    sm:w-auto sm:text-sm
                  ">
              Weiter
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="
            flex flex-col
            space-y-2
            justify-center
            border border-gray-300
            rounded-md
          ">
      <div id="taskContainer" class="
              text-gray-700
              flex flex-row
              items-center
              justify-between
              text-center
              border-b
            ">
             <button type="button" id="r" class="
                h-10
                px-2
                w-full
                rounded-t
                flex
                justify-center
                items-center
                transition
                text-gray-800
                hover:bg-indigo-500
                hover:text-white
                focus:outline-none
                speaker-button
              ">
          <svg stroke="currentColor" fill="currentColor" version="1.0"
            width="18" height="18" viewBox="0 0 75 75"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M39.389,13.769 L22.235,28.606 L6,28.606 L6,47.699 L21.989,47.699 L39.389,62.75 L39.389,13.769z"
              style="stroke-width: 5; stroke-linejoin: round" />
            <path
              d="M48,27.6a19.5,19.5 0 0 1 0,21.4M55.1,20.5a30,30 0 0 1 0,35.6M61.6,14a38.8,38.8 0 0 1 0,48.6"
              style="fill: none; stroke-width: 5; stroke-linecap: round" />
          </svg>
           <span id="taskField" class="p-2">Bitte
          "Starten" klicken</span>
       
        </button>
       
      </div>

      <canvas lang="{{{lang}}}" t="{{{t}}}" r="{{{r}}}" id="can"
        width="280" height="280"
        class="bg-gray-200 rounded-md border mx-2"></canvas>
      <div class="flex justify-between px-2 pb-2">
        <div class="h-8 space-x-2">
          <button type="button" id="clr" class="
                  bg-red-600
                  h-8
                  p-1
                  px-2
                  rounded-sm
                  text-white
                  transition
                  hover:bg-red-500
                  focus:outline-none
                ">
            <svg stroke="currentColor" fill="currentColor"
              stroke-width="0" viewBox="0 0 24 24" height="1em"
              width="1em" xmlns="http://www.w3.org/2000/svg">
              <g>
                <path fill="none" d="M0 0h24v24H0z"></path>
                <path
                  d="M14 19h7v2h-9l-3.998.002-6.487-6.487a1 1 0 0 1 0-1.414L12.12 2.494a1 1 0 0 1 1.415 0l7.778 7.778a1 1 0 0 1 0 1.414L14 19zm1.657-4.485l3.535-3.536-6.364-6.364-3.535 3.536 6.364 6.364z">
                </path>
              </g>
            </svg>
          </button>
          <button type="button" id="q" class="
                  bg-indigo-600
                  h-8
                  p-1
                  px-2
                  rounded-sm
                  text-white
                  transition
                  hover:bg-indigo-500
                  focus:outline-none
                ">
            <svg stroke="currentColor" fill="currentColor"
              stroke-width="0" viewBox="0 0 24 24" height="1em"
              width="1em" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z"></path>
            </svg>
          </button>
        </div>

        <button type="button" id="btn" class="
                bg-green-600
                p-1
                px-3
                rounded-sm
                text-white
                transition
                hover:bg-green-500
                focus:outline-none
              ">
          Starten
        </button>
      </div>
    </div>

    <div id="progress-container" class="mt-2 hidden">
      <div class="h-3 relative max-w-xl rounded-full overflow-hidden">
        <div class="w-full h-full bg-gray-200 absolute"></div>
        <div id="progress-bar"
          class="transition-all ease-out duration-400 h-full bg-indigo-300 relative">
        </div>
      </div>
      <p id="progress-text"
        class="text-sm leading-6 font-medium text-gray-500 text-center"></p>
    </div>


  </div>
</div>
<script type="module" src="static/js/index.js"></script>